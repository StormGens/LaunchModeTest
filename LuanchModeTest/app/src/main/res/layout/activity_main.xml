<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zlq.lmt.MainActivity">

    <LinearLayout
        android:id="@+id/taskId_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/taskId_tv"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"
            tools:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:text="--当前任务栈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <CheckBox
        android:id="@+id/for_result"
        android:text="StartActivityForResult?"
        android:layout_below="@id/taskId_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@id/for_result"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/standard_btn"
            android:textAllCaps="false"
            android:text="Standard Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/singleTop_btn"
            android:textAllCaps="false"
            android:text="SingleTop Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/singleTask_btn"
            android:textAllCaps="false"
            android:text="SingleTask Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/singleTask_taskA_btn"
            android:textAllCaps="false"
            android:text="SingeTask with TaskAffinity Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/singleInstance_btn"
            android:textAllCaps="false"
            android:text="SingleInstance Activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>
